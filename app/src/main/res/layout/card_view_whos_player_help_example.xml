<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/help_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/whos_player_20dp"
    app:cardCornerRadius="@dimen/whos_player_16dp"
    app:cardElevation="@dimen/whos_player_8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/cardView_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/whos_player_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/first_team"
                layout="@layout/adapter_whos_player_team_crest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/second_team"
                layout="@layout/adapter_whos_player_team_crest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/third_team"
                layout="@layout/adapter_whos_player_team_crest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/fourth_team"
                layout="@layout/adapter_whos_player_team_crest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/adapter_whos_player_team_crest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <include
                layout="@layout/adapter_whos_player_team_crest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>